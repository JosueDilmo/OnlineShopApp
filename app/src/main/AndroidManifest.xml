<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.josue.onlineshopapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnlineShopApp">
        <activity
            android:name=".ui.activities.ProductDetailsDashboard"
            android:exported="false" />
        <activity
            android:name=".ui.activities.ProductDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.myNoActionBar" />
        <activity
            android:name=".ui.activities.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.myNoActionBar" />
        <activity
            android:name=".ui.activities.DashboardActivity"
            android:exported="false"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.activities.UserProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.myNoActionBar" />
        <activity
            android:name=".ui.activities.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.myNoActionBar" />
        <activity
            android:name=".ui.activities.BaseActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.myNoActionBar" />
        <activity
            android:name=".ui.activities.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.myNoActionBar" />
        <activity
            android:name=".ui.activities.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.myNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.MainActivity" />
    </application>

</manifest>